{
  "name": "@krutoo/utils",
  "type": "module",
  "version": "0.0.0",
  "description": "Set of useful utils for JavaScript/TypeScript projects",
  "author": "Dmitriy Petrov <dima.krutoo@yandex.ru>",
  "homepage": "https://krutoo.github.io/utils",
  "keywords": [
    "javascript",
    "typescript",
    "utils",
    "helpers",
    "math",
    "dom",
    "react",
    "rspack"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krutoo/utils.git"
  },
  "engines": {
    "node": ">=16"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=22.6.0",
      "onFail": "warn"
    },
    "packageManager": {
      "name": "npm",
      "version": ">=10.9.3",
      "onFail": "warn"
    }
  },
  "sideEffects": false,
  "scripts": {
    "prepare": "node ./scripts/git-hooks.js",
    "check": "tsc -p . --noEmit",
    "fmt": "prettier . --write",
    "lint": "eslint . && prettier . --check && ls-lint",
    "test": "node --import ./scripts/setup-tests.ts ./scripts/test.ts",
    "sync-exports": "node ./scripts/sync-exports.ts",
    "build": "node ./scripts/build.ts && npm run sync-exports",
    "commit": "better-commits",
    "changelog": "npx git-cliff -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.35.0",
    "@happy-dom/global-registrator": "^20.0.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "@rspack/core": "^1.5.5",
    "@std/expect": "npm:@jsr/std__expect@^1.0.17",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "better-commits": "^1.17.0",
    "eslint": "^9.35.0",
    "eslint-plugin-jsdoc": "^54.0.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "git-cliff": "^2.9.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "svgo": "^4.0.0",
    "tsimp": "^2.0.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "peerDependencies": {
    "@rspack/core": "^1.1.8",
    "@svgr/webpack": "^8.1.0",
    "css-loader": "^7.1.2",
    "react": "^17 || ^18 || ^19",
    "react-dom": "^17 || ^18 || ^19"
  },
  "peerDependenciesMeta": {
    "@rspack/core": {
      "optional": true
    },
    "@svgr/webpack": {
      "optional": true
    },
    "css-loader": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "public",
    "README.md"
  ],
  "exports": {
    ".": "./dist/mod.js",
    "./dom": "./dist/dom/mod.js",
    "./math": "./dist/math/mod.js",
    "./misc": "./dist/misc/mod.js",
    "./react": "./dist/react/mod.js",
    "./rspack": "./dist/rspack/mod.js",
    "./store": "./dist/store/mod.js",
    "./testing": "./dist/testing/mod.js",
    "./types": "./dist/types/mod.js",
    "./typings/css-modules": {
      "types": "./public/typings/css-modules.d.ts"
    },
    "./typings/react-svg": {
      "types": "./public/typings/react-svg.d.ts"
    }
  }
}
