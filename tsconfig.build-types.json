{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist/types"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "tests-pkg",
    "tests-e2e",
    "docs",
    "dist",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
