{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "noEmit": false,
    "declaration": false,
    "isolatedDeclarations": false,
    "sourceMap": true,
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "tests-pkg",
    "tests-e2e",
    "docs",
    "dist",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
